# Caddy configuration - SSL handled by Cloudflare
{
    auto_https off
}

# Twenty CRM
:80 {
    @twenty host vasilisa.at
    handle @twenty {
        reverse_proxy ms-twenty-server:3000
    }

    @chatwoot host chat.vasilisa.at
    handle @chatwoot {
        reverse_proxy ms-chatwoot-web:4000
    }

    @gme host gme.vasilisa.at
    handle @gme {
        reverse_proxy ms-gme:8000
    }

    @waha host waha.vasilisa.at
    handle @waha {
        reverse_proxy ms-waha:3000
    }

    handle {
        respond "Not Found" 404
    }
}
